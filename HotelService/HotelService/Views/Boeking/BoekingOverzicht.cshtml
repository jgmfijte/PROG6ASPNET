@model IQueryable<DataAccessLayer.Boekingen>

@{
    ViewBag.Title = "BoekingOverzicht";
}
<link href="../Content/StyleSheet.css" rel="stylesheet" type="text/css" />
<div id="wrapper">
    <div id="headerwrap">
        <div id="header">
            <h1>HotelService </h1>
        </div>
    </div>
    <div id="menuwrap">
        <div id="menu">
            <p>
                @Html.ActionLink("Home", "Index", "Home") | 
                @Html.ActionLink("Kamers", "KamerOverzicht", "Kamer") | 
                @Html.ActionLink("Gasten", "GastOverzicht", "Gast") |
                @Html.ActionLink("Boekingen", "BoekingOverzicht", "Boeking")
            </p>
        </div>
    </div>
    <div id="contentwrap">
        <div id="content">
            <h2>@ViewBag.Title</h2>
            
            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
            <table>
                <tr>
                    <th>ID</th>
                    <th>Startdatum</th>
                    <th>Einddatum</th>
                    <th>KlantID</th>
                </tr>

                @foreach (var boeking in Model) { 
                    <tr>
                        <td>@boeking.BoekingsNr</td>
                        <td>@boeking.Startdatum</td>
                        <td>@boeking.Einddatum</td>
                        <td>@boeking.Boeking_KlantNr</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Klant Details", "Details", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
    <div id="footerwrap">
        <div id="footer">
            <p>Martijn de Fijter en Suzanne Jenniskens - 2013/2014 - 42IN06SOc</p>
        </div>
    </div>
</div>
