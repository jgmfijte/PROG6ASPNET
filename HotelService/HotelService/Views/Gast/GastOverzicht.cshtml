@model IQueryable<DataAccessLayer.Klanten>

@{
    ViewBag.Title = "GastOverzicht";
}

<link href="../Content/StyleSheet.css" rel="stylesheet" type="text/css" />
<div id="wrapper">
    <div id="headerwrap">
        <div id="header">
            <h1>HotelService </h1>
        </div>
    </div>
    <div id="menuwrap">
        <div id="menu">
            <p>
                @Html.ActionLink("Home", "Index", "Home") | 
                @Html.ActionLink("Kamers", "KamerOverzicht", "Kamer") | 
                @Html.ActionLink("Gasten", "GastOverzicht", "Gast") |
                @Html.ActionLink("Boekingen", "BoekingOverzicht", "Boeking") |
                @Html.ActionLink("Log uit", "Logoff", "Home")
            </p>
        </div>
    </div>
    <div id="contentwrap">
        <div id="content">
            <h2>@ViewBag.Title</h2>

            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
            <table>
                <tr>
                    <th>Voornaam</th>
                    <th>Achternaam</th>
                    <th>Geboortedatum</th>
                    <th>M/V</th>
                    <th>Adres</th>
                    <th>Postcode</th>
                    <th>Woonplaats</th>
                    <th>E-mail</th>
                </tr>

                @foreach (DataAccessLayer.Klanten klant in Model) {
                    <tr>
                        <td>@klant.Voornaam</td>
                        <td>@klant.Achternaam</td>
                        <td>@klant.Geboortedatum</td>
                        <td>@klant.Geslacht</td>
                        <td>@klant.Adres</td>
                        <td>@klant.Postcode</td>
                        <td>@klant.Woonplaats</td>
                        <td>@klant.Email</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Delete", "Delete", new { klantNr=klant.KlantNummer }) 
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
    <div id="footerwrap">
        <div id="footer">
            <p>Martijn de Fijter en Suzanne Jenniskens - 2013/2014 - 42IN06SOc</p>
        </div>
    </div>
</div>

<script>
    function OpenDeleteWarning() {
        var userWidth = screen.availWidth;
        var userHeight = screen.availHeight;
        leftPos = (userWidth - 300) / 2,
        topPos = (userHeight - 180) / 2;
        settings = 'modal,scrollBars=no,resizable=no,toolbar=no,menubar=no,location=no,directories=no,left=' + leftPos + ',top=' + topPos + ',width=300, height=180';

        window.open("Delete", "popup", settings);
    }
    </script>